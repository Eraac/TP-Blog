{% extends 'LKECoreBundle::layout_with_title.html.twig' %}

{%- block content_title -%}
    {{ "lkecore.homepage.title"|trans }}
{%- endblock -%}

{% block body %}

    {% for post in posts %}
    <div class="col s12 m4 l3">
        {% include 'LKEBlogBundle:Template:preview_post.html.twig' %}
    </div>
    {% else %}
        <p>
            {{ 'lkecore.homepage.no_post'|trans }}
        </p>
    {% endfor %}

{% endblock %}
