{% extends 'LKECoreBundle::layout_with_title.html.twig' %}

{%- block content_title -%}
    {{ "lkeuser.list.user.title"|trans }}
{%- endblock -%}

{% block body %}

    <div class="col s12 m12 l12">
        {% for user in pagination %}
            {% include 'LKEUserBundle:Template:preview_user.html.twig' %}
        {% else %}
            <p>
                {{ 'lkeuser.list.no_user'|trans }}
            </p>
        {% endfor %}

        <div class="col s12 center-align">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock %}
