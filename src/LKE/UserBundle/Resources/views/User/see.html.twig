{% extends 'LKECoreBundle::layout.html.twig' %}

{% block body %}

    <div class="col s12 m12 l12">
        {% include 'LKEUserBundle:Template:full_user.html.twig' %}

        {% if pagination is not empty %}
            <h4>{{ "lkeblog.list.post.title"|trans }}</h4>
        {% endif %}

        {% for post in pagination %}
            {% include 'LKEBlogBundle:Template:preview_post.html.twig' %}
        {% else %}
            <p>
                {{ 'lkeblog.list.no_posts'|trans }}
            </p>
        {% endfor %}

        <div class="col s12 center-align">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock %}
