{% extends "LKECoreBundle::layout.html.twig" %}

{% block body %}
    <h2 class="green-text">{{ tag.name }}</h2>

    {% for post in posts %}
        <div class="col s12 m6 l4">
            {% include 'LKEBlogBundle:Template:preview_post.html.twig' %}
        </div>
    {% else %}
        <p>
            {{ 'lkecore.homepage.no_post'|trans }}
        </p>
    {% endfor %}
{% endblock %}
